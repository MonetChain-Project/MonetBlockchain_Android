<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:mapbox="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/paperkey_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:paddingLeft="40dp"
		android:paddingRight="40dp"
		android:text="@string/paperkey_title"
		android:textAlignment="center"
		android:textColor="@color/verge_colorPrimaryDark"
		android:textSize="24sp" />

	<ImageView
		android:layout_below="@+id/paperkey_title"
		android:layout_width="wrap_content"
		android:padding="20dp"
		android:layout_height="190dp"
		android:id="@+id/paperkey_header"
		android:src="@drawable/header_paperkey" />

	<TextView
		android:layout_below="@+id/paperkey_header"
		android:id="@+id/paperkey_desc"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:paddingLeft="40dp"
		android:paddingRight="40dp"
		android:textSize="16sp"
		android:text="@string/paperkey_desc"
		android:textAlignment="center" />

	<Button
		android:id="@+id/button_open_wallet"
		android:layout_alignParentBottom="true"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:adjustViewBounds="true"
		android:background="@drawable/form_rounded_white_rect"
		android:backgroundTint="@color/verge_colorPrimary"
		android:scaleType="fitCenter"
		android:text="@string/paperkey_button"
		android:textColor="@color/verge_colorBackgroundTwo"
		android:textSize="18sp" />

</RelativeLayout>