<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_donate_layout">



    <TextView
        android:id="@+id/donate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/donate_title"
        android:textAlignment="center"
        android:textColor="@color/verge_colorPrimaryDark"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/donate_header"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:layout_height="190dp"
        android:layout_below="@+id/donate_title"
        android:src="@drawable/header_donate" />

    <TextView
        android:id="@+id/donate_desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donate_header"
        android:layout_marginTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/donate_desc1"
        android:textAlignment="center"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/donate_desc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donate_desc1"
        android:layout_marginTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/donate_desc2"
        android:textAlignment="center"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button_donate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/form_rounded_white_rect"
        android:backgroundTint="@color/verge_colorPrimary"
        android:scaleType="fitCenter"
        android:text="@string/donate_button"
        android:textColor="@color/verge_colorBackgroundTwo"
        android:textSize="18sp" />

    <FrameLayout
        android:id="@+id/donate_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTintMode="add"
        android:backgroundTint="@color/bg_color"
        />


</RelativeLayout>