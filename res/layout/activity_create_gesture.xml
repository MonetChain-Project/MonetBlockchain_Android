<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_title_layout"/>

    <com.lingtuan.firefly.custom.gesturelock.LockPatternIndicator
        android:id="@+id/lockPatterIndicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/messageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/create_gesture_default"
        android:textColor="@color/textColorHint"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <com.lingtuan.firefly.custom.gesturelock.LockPatternView
            android:id="@+id/lockPatternView"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/resetBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="@string/create_gesture_reset"
            android:textColor="@color/gesture_lock_select"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>